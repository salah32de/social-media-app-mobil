<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    tools:context=".UI.Activity.Setting.SettingActivity">

    <ImageView
        android:id="@+id/backSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Settings"
        android:textColor="?attr/colorOnSurface"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backSetting" />

    <TextView
        android:id="@+id/updateInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorSurface"
        android:padding="12dp"
        android:text="✏️ Update information"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettings" />

    <TextView
        android:id="@+id/updatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorSurface"
        android:padding="12dp"
        android:text="Update password"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateInformation" />
    <TextView
        android:id="@+id/savedPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorSurface"
        android:padding="12dp"
        android:text="Saved posts"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePassword" />

    <LinearLayout
        android:id="@+id/lineSwitchMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorSurface"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/savedPosts">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Dark mode"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swithMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/deleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorSurface"
        android:padding="12dp"
        android:text="Delete Account"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineSwitchMode" />

    <TextView
        android:id="@+id/signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="?attr/colorTertiaryContainer"
        android:padding="12dp"
        android:text="🚪Sign out"
        android:textColor="?attr/colorOnTertiaryContainer"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>